{{define "title"}}Home{{end}}
{{define "main"}}
<h2>Latest Glysts</h2>
{{if .Glysts}}
<table>
<tr>
<th>Title</th>
<th>Created</th>
<th>ID</th>
</tr>
{{range .Glysts}}
<tr>
<td><a href='/glyst/view/{{.ID}}'>{{.Title}}</a></td>
<td>{{.Created}}</td>
<td>#{{.ID}}</td>
</tr>
{{end}}
</table>
{{else}}
<p>There's nothing to see here... yet!</p>
{{end}}
{{end}}
